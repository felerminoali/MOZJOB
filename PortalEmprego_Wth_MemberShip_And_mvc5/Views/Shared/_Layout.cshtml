<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
   
    @Styles.Render("~/Content/joomla")
    
   

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/modernizr")
   


</head>
<body>
    
    <nav class="navbar navbar-inverse navbar-fixed-top navbar-static-top">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#">Project name</a>
            </div>
            <div id="navbar" class="collapse navbar-collapse">
                <ul class="nav navbar-nav">
                    @*<li class="active"><a href="#">Home</a></li>
                        <li><a href="#about">About</a></li>
                        <li><a href="#contact">Contact</a></li>*@
                    <li><a><span class="glyphicon glyphicon-home"></span> Inicio</a></li>
                    @*<li>@Html.ActionLink("Home", "Index", "Home")</li>*@
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                </ul>

                <div>

                </div>
                @Html.Partial("_LoginPartial")

            </div><!-- /.nav-collapse -->
        </div><!-- /.container -->
    </nav><!-- /.navbar -->


    <div style="margin-bottom: 20px"></div>
    <div >
        @if (IsSectionDefined("Features") || IsSectionDefined("Menu"))
        {
            <aside>
        

                    @if (IsSectionDefined("Features"))
                    {
                        @RenderSection("Features", false)
                    }



                    @if (IsSectionDefined("Menu"))
                    {
                        @RenderSection("Menu", false)
                    }

               
            </aside>

        }




        <div >
            @RenderBody()
        </div>




    </div>

    <hr />
    <footer>
        <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
    </footer>



    @RenderSection("scripts", required: true)
</body>
</html>
