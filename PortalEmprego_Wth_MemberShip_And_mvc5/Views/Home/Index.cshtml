                <div class="col-md-11">

                    <div class="control-group">
                        <h2>
                            Anucios

                            @if (@Model.Count > 0)
                            {



                                int total = ViewBag.totalAnuncios;


                                <small>(Cerca de @total Resultados encontrados)</small>
                            }
