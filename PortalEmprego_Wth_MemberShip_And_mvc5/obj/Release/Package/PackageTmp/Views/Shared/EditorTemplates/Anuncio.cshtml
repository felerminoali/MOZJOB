@model PortalEmprego_Wth_MemberShip_And_mvc5.Models.Anuncio

<tr>

    <td>
        <div class="pull-left">

            <div class="container">
                <img src="~/Content/images/img.png" width="100" height="150" />
            </div>

        </div>
    </td>
    <td>
        <div class="pull-left">
            @if (@Model.category != null)
            {
                <a>
                    <p><h2><small>@Model.Category1.Name</small></h2></p>
                </a>
            }

            @if (@Model.title != null)
            {
                <h5>
                    <a href="@Url.Action("Details", "Anuncio", new { id = @Model.Id })">
                        @Model.title
                    </a>
                    <br />
                </h5>
            }



            @if (@Model.created_by != null)
            {
                <p><h3><small>@Model.Category1.Name</small></h3></p>
                <a href="@Url.Action("Details", "Anuncio", new { id = @Model.Id })">
                    @Model.Recrutador.Name
                </a>
            }

            @if (@Model.Local != null)
            {
                <h5>
                    <p>
                        <small>Em:</small>
                        <a href="@Url.Action("Details", "Anuncio", new { id = @Model.Id })">
                            @Model.Local.Name
                        </a>
                    </p>
                    <br />

                </h5>
            }
        </div>
    </td>
    
</tr>