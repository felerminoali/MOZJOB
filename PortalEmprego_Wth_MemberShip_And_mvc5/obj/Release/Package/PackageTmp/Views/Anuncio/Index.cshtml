@model IEnumerable<PortalEmprego_Wth_MemberShip_And_mvc5.Models.Anuncio>

@{ 
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>



    @using (@Html.BeginForm("Index1", "Anuncio", FormMethod.Get, new { id = "searchForm" }))
    {
        <div class="row">

            <div class="col-md-2">

            </div>


            <div class="col-md-10">
                <div class="jumbotron no-margin">
                    <div class="row">



                        <div class="container">

                            <div class="col-lg-12">
                                <div class="input-group">

                                    @Html.TextBox("search", null, new { @class = "form-control", placeholder = "Keyword ...", id = "txtSearch" })

                                    <span class="input-group-btn">
                                        <button class="btn btn-primary" type="submit"><span class="glyphicon glyphicon-search"></span> Search</button>
                                    </span>
                                </div><!-- /input-group -->
                            </div><!-- /.col-lg-6 -->
                        </div>
                    </div>

                    

                    <div class="row">

                        <div class="col-md-12">

                            <div class="row">
                                <div class="container">
                                    <div class="col-lg-2">

                                        <div class="input-group">


                                            <div class="controls">
                                                @Html.DropDownList("tipoAnuncio", null, "-- Anuncios(Todos) --", new { @class = "form-control" })
                                            </div>

                                        </div><!-- /input-group -->
                                    </div><!-- /.col-lg-6 -->

                                    <div class="col-lg-2">
                                        <div class="input-group">

                                            <div class="controls">
                                                @Html.DropDownList("Status", null, "-- Publicação(Todos) --", new { @class = "form-control" })
                                            </div>


                                        </div><!-- /input-group -->
                                    </div><!-- /.col-lg-6 -->

                                    <div class="col-lg-2">
                                        <div class="input-group">

                                            <div class="controls">
                                                @Html.DropDownList("Lang", null, "-- Língua(Todos) --", new { @class = "form-control" })
                                            </div>


                                        </div><!-- /input-group -->
                                    </div><!-- /.col-lg-6 -->

                                    <div class="col-lg-2">
                                        <div class="input-group">

                                            <div class="controls">
                                                @Html.DropDownList("Location", null, "-- Local(Todos) --", new { @class = "form-control" })
                                            </div>


                                        </div><!-- /input-group -->
                                    </div><!-- /.col-lg-6 -->

                                    <div class="col-lg-2">
                                        <div class="input-group">

                                            <div class="controls">
                                                @Html.DropDownList("category", null, "-- Categorias(Todos) --", new { @class = "form-control" })
                                            </div>


                                        </div><!-- /input-group -->
                                    </div><!-- /.col-lg-6 -->



                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

</div>

<div style="height: 100%;">
    <div class="container-fluid">

        <div class="row">


            <div class="col-md-10 col-md-push-2">

                <div class="table-responsive">

                    <div style="height:400px; overflow:auto">


                        @if (@Model.Count() > 0)
                    {
                            <table class="table table-hover tabela" id="articleList" style="color:black">

                                <thead>
                                    <tr>
                                        <th width="5%"></th>
                                        <th></th>
                                    </tr>
                                </thead>
                                
                                <tbody>
                                    @Html.EditorForModel()
                                </tbody>
                            </table>

                    }
                    else
                    {
                            <div class="alert alert-warning">
                                Empty result
                            </div>
                    }

                   </div>

                </div>

            </div>

           
        </div>
    </div>

</div>


@section Scripts {

    <script src="~/Scripts/jquery-ui-1.10.4.custom.min.js"></script>

    <script type="text/javascript">

        $(function () {
            $("#txtSearch").autocomplete({
                source: '@Url.Action("GetAnuncios")',
                minLength: 1
            });
        });
    </script>


 

  
}
